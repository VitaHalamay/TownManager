@{
    ViewData["Title"] = "Build";
    var flyweight = new TownManager.Services.Patterns.Flyweight();

}
@using TownManager.Models.Enums

<div class="row">

    @foreach (BuildingType building in Enum.GetValues(typeof(BuildingType)))
    {
        <div class="col-lg-2 pb-4">
            <a href="/Home/Build/@(building)" title="@building">
                <img src="data:image/jpeg;base64,@flyweight.GetImage(building)">
            </a>
            <p>@((building).GetName())</p>
        </div>
    }

</div>
