@{
    ViewData["Title"] = "Build";
    var flyweight = new TownManager.Services.Patterns.Flyweight();

}

<div class="row">

    @foreach (var building in Enum.GetValues(typeof(TownManager.Models.Enums.BuildingType)))
    {
        <div class="col-lg-2 pb-4">
            <a href="/Home/Build/@(building)" title="@building">
                <img src="data:image/jpeg;base64,@flyweight.GetImage((TownManager.Models.Enums.BuildingType)building)">
            </a>
            <p>@building</p>
        </div>
    }

</div>
